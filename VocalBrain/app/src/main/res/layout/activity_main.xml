<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.canyourunit.voicebrain.MainActivity"
    android:background="@drawable/splash_screen_med">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play"
        android:id="@+id/play_button"
        android:background="#00ffffff"
        android:textColor="#ffffff"
        android:elegantTextHeight="false"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        android:textSize="40dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="67dp"
        android:layout_above="@+id/options_button"
        android:layout_alignLeft="@+id/options_button"
        android:layout_alignStart="@+id/options_button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/options"
        android:id="@+id/options_button"
        android:textColor="#ffffff"
        android:background="#00ffffff"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textSize="40dp"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:text="@string/splashinfo"
        android:id="@+id/splashinfo"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp" />

    <ImageView
        android:id="@+id/microphone_icon"
        android:layout_width="wrap_content"
        android:adjustViewBounds="true"
        android:layout_height="fill_parent"
        android:src="@drawable/mic"
        android:gravity="left"
        android:layout_alignTop="@+id/splashinfo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logo"
        android:src="@drawable/splashscreenart"
        android:layout_toStartOf="@+id/options_button"
        android:layout_alignBottom="@+id/options_button" />

</RelativeLayout>
